<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="1000.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="at.fhtw.swen2.presentation.view.EditTourListView">
    <children>
        <HBox>
            <children>
                <TableView fx:id="tableView" prefHeight="350.0" prefWidth="700.0">
                    <columns>
                        <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
                        <TableColumn fx:id="fromColumn" prefWidth="75.0" text="From" />
                        <TableColumn fx:id="toColumn" prefWidth="75.0" text="To" />
                        <TableColumn fx:id="transportTypeColumn" prefWidth="75.0" text="Transport Type" />
                        <TableColumn fx:id="distanceColumn" prefWidth="75.0" text="Distance" />
                        <TableColumn fx:id="timeColumn" prefWidth="75.0" text="Time" />
                    </columns>
                </TableView>
            </children>
            <VBox>
            <children>
                <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="nameEditTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="descriptionEditTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="From:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="fromEditTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="To:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="toEditTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Distance:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="distanceEditTextField" />
                <Label text="Time:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="timeEditTextField" />
            </children>

            <HBox>
            <children>
                <Button fx:id="saveEditButton" onAction="#saveEditButtonAction" text="Edit Tour"></Button>
            </children>
            <children>
                <Button fx:id="editEditButton" onAction="#editEditButtonAction" text="Save New Tour"></Button>
            </children>
            </HBox>
            </VBox>

        </HBox>

    </children>

</AnchorPane>
